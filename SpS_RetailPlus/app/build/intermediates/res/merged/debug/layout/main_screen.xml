<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
	
    <!--  Sample Dashboard screen with Two buttons -->
    <Button android:id="@+id/btnViewProducts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Fantasias"
        android:layout_marginTop="25dip"
        android:singleLine="true"
        android:longClickable="false"
        android:layout_marginLeft="75dip"
        android:layout_marginRight="75dip"
        android:background="#7cabc9" />
    
    <Button android:id="@+id/btnViewClients"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clientes"
        android:layout_marginTop="25dip"
        android:singleLine="true"
        android:longClickable="false"
        android:layout_marginLeft="75dip"
        android:layout_marginRight="75dip"
        android:background="#7cabc9" />

    <Button android:id="@+id/btnNewSale"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nova Venda"
        android:layout_marginTop="25dip"
        android:singleLine="true"
        android:longClickable="false"
        android:layout_marginLeft="75dip"
        android:layout_marginRight="75dip"
        android:background="#7cabc9" />

    <Button android:id="@+id/btnViewSales"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Todas as Vendas"
        android:layout_marginTop="25dip"
        android:singleLine="true"
        android:longClickable="false"
        android:layout_marginLeft="75dip"
        android:layout_marginRight="75dip"
        android:background="#7cabc9" />
</LinearLayout><!-- From: file:/C:/Users/Aldrick/Google%20Drive/Software%20para%20Smart/SpS_RetailPlus/app/src/main/res/layout/main_screen.xml -->