<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <!-- Name Label -->
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Cliente:"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="17dip"/>
    

	<EditText android:id="@+id/inputNome"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dip"
	    android:layout_marginBottom="15dip"
	    android:singleLine="true"/>
	

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cpf:"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="17dip"/>
    

	<EditText android:id="@+id/inputCpf"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dip"
	    android:layout_marginBottom="15dip"
	    android:singleLine="true"
        android:numeric="integer" />
	

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="17dip" />
    

	<EditText android:id="@+id/inputTelefone"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dip"
	    android:layout_marginBottom="15dip"
	    android:lines="4"
	    android:gravity="top"
        android:numeric="integer" />
	


    <Button android:id="@+id/btnCreateClient"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Create Product"/>
	
</LinearLayout><!-- From: file:/C:/Users/Aldrick/Google%20Drive/Software%20para%20Smart/SpS_RetailPlus/app/src/main/res/layout/add_client.xml -->